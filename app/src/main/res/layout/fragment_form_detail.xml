<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.Form.FormDetailFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:layout_weight="1"
        android:id="@+id/tv_form_name"
        android:textSize="18sp"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORM NAME" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_direktorat"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Direktorat" />
    <TextView
        android:id="@+id/tv_posisi"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Posisi" />

    <ImageView
        android:id="@+id/img_file"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/imgalt" />

    <TextView
        android:id="@+id/tv_file_path"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text=".../.../test.pdf" />


</LinearLayout>
